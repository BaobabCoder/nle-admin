@{
    ViewData["Title"] = "Application's logs";
}

@section styles{
    <link rel="stylesheet" href="~/lib/admin-lte/plugins/datatables/dataTables.bootstrap.css">
}

@section scripts{
    <script src="~/lib/admin-lte/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/admin-lte/plugins/datatables/dataTables.bootstrap.min.js"></script>
    <script src="~/js/logs.js"></script>
}
<input type="hidden" name="hostname" id="hostname" value="@ViewBag.hostname" />

<div class="panel panel-default">
    <div class="panel-body">
        <div class="pull-right">
            <button id="showConfig" class="btn btn-info" data-toggle="modal" data-target="#myModal"><i class="fa fa-cog"></i></button>
            <button id="getKeyBtn" class="btn btn-info" >Show API key</button>
            <button id="deleteLogsBtn" class="btn btn-danger">Remove logs</button>
        </div>
    </div>
</div>

<div id="dtContainer">
    <div class="overlay">
        <i class="fa fa-refresh fa-spin"></i>
    </div>
</div>


<div id="myModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Modal title</h4>
            </div>
            <div class="modal-body">
                <div id="configContainer">

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

