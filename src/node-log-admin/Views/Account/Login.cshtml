@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Log in";
}

<div class="login-box">
    <div class="login-logo">
        <b>NodeLOG</b> Admin
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">Sign in to start your session</p>
        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
            <div class="form-group has-feedback">
                <input asp-for="Email" class="form-control" />
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <input asp-for="Password" class="form-control" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-xs-8">
                    <div class="checkbox icheck" style="margin-left:10px;">
                        <div class="icheckbox_square-blue">
                            <input asp-for="RememberMe" class="icheckbox_square-blue" />
                            <label asp-for="RememberMe"></label>
                        </div>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

        <!-- /.social-auth-links -->
        <a asp-action="ForgotPassword">Forgot your password?</a><br>
        <a asp-action="Register">Register as a new user?</a>
    </div>
    <!-- /.login-box-body -->
</div>

@section scripts{
    <script src="~/lib/admin-lte/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
