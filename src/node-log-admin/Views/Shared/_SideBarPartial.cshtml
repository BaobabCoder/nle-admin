@using System.Security.Claims
@using node_log_admin.Tools

@if(User.IsSignedIn()){
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar" id="sidebar_left">
        <!-- sidebar: style can be found in sidebar.less -->
        <section style="height: auto;" class="sidebar">
            <!-- Sidebar user panel -->
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="~/lib/admin-lte/dist/img/default-50x50.gif" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">
                    <p>@User.GetUserName()</p>
                    <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                </div>
            </div>
            <!-- search form -->
            <form action="#" method="get" class="sidebar-form">
                <div class="input-group">
                    <input name="q" class="form-control" placeholder="Search..." type="text">
                    <span class="input-group-btn">
                        <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </form>
            <!-- /.search form -->
            <!-- sidebar menu: : style can be found in sidebar.less -->
            <ul class="sidebar-menu">
                <li class="header">MAIN NAVIGATION</li>
                <li class="active"><a href="/" data-menu-link="@MenuItems.Home"><i class="fa fa-dashboard"></i> <span>Accueil</span></a></li>
                
                <li class="treeview">
                    <a href="#"  data-menu-link="@MenuItems.Log">
                        <i class="fa fa-book"></i> <span>Applications</span> <i class="fa fa-angle-left pull-right"></i>
                    </a>
                    <ul class="treeview-menu" id="hostList">

                        <li><a id="addAppBtn" title="" href="#" class="btn btn-flat"><i class="fa fa-plus"></i> Add</a></li>
                    </ul>
                </li>
                
                <li><a href="/Documentation" data-menu-link="@MenuItems.Documentation"><i class="fa fa-book"></i> <span>Documentation</span></a></li>
                @*<li class="header">LABELS</li>
                <li><a href="#"><i class="fa fa-circle-o text-red"></i> <span>Important</span></a></li>
                <li><a href="#"><i class="fa fa-circle-o text-yellow"></i> <span>Warning</span></a></li>
                <li><a href="#"><i class="fa fa-circle-o text-aqua"></i> <span>Information</span></a></li>*@
            </ul>
        </section>
        <!-- /.sidebar -->
    </aside>
}
